.custom-select
  position relative
  width 100%
  text-align left
  outline none
  height 47px
  line-height 47px

.select
  width 500px
  height 40px

.selected.open
  border 1px solid #CE9B2C
  border-radius 6px 6px 0px 0px

.selected:after
  position absolute
  content ""
  top 22px
  right 10px
  width 0
  height 0
  border 4px solid transparent

.items
  width 500px
  overflow hidden
  position absolute
  left 0
  right 0

.item
  padding-left 8px
  cursor pointer
  user-select none

.item:hover
  background-color black
  color #ffffff

.selectHide
  display none
